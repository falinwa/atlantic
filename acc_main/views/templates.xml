<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="coolcomp_css">
        <style>
            .page{
            font-family:Calibri, sans-serif;
            color:#22518a;
            margin-bottom:200px;
            }
            .bordered{
            border: 2px solid #FA7032;
            padding: 10px;
            margin: 10px;
            width:250px;
            height:180px;
            font-family:Calibri, sans-serif;
            border-radius:15px;
            }
            table, th, td {
            padding: 10px;
            border: 1px solid #22518a;
            width: 400px;
            border-collapse: collapse;
            color:#22518a;

            }
            .main_table{
            width:100%;
            color:#22518a;
            }
            .main_table td{
            padding: 2px 10px;
            font-size: 15px;
            color:#22518a;
            }
            .table_total{
            width:300px;
            }
            .table_total,
            .table_total td,
            .table_total th{
            padding:3px
            }
            th {
            color:#22518a;
            }
            .date_table,
            .date_table td,
            .date_table th{
            padding:3px 10px
            }
            .name_table,
            .name_table td,
            .name_table th{
            border: 2px solid #22518a;
            color:#22518a;
            }
            .footer-test {
            position: fixed;
            left: 0;
            bottom: 0;
            width: 100%;
            page-break-inside: avoid;
            }
        </style>
    </template>
    <template id="report_purchaseorder_document">
        <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)"/>
        <t t-call="acc_main.coolcomp_css"/>
        <div class="page">
            <div>
                <img class="img-fluid" width="400" src="https://i.imgur.com/usfB5jo.jpg"/>
                <div class="bordered" style="float:right">
                    <strong>Delivery Address:</strong>
                    <div t-if="doc.dest_address_id">
                        <div t-field="doc.dest_address_id.name"/>
                        <div t-field="doc.dest_address_id"
                             t-options="{'widget':'contact','fields':['address','phone']}"/>
                    </div>
                    <div t-else="">
                        <div t-field="doc.dest_internal_address_id.name"/>
                        <div t-field="doc.dest_internal_address_id"
                             t-options="{'widget':'contact','fields':['address','phone']}"/>
                    </div>
                    <strong>Customer Reference:</strong>
                    <span t-field="doc.customer_ref"/>
                </div>
            </div>
            <div style="margin-top:20px;margin-bottom:20px">
                <div style="float:left;margin-top:47px">
                    <table class="name_table" style="width:250px;">
                        <tr>
                            <th style="color:#FA7032;font-size:20px;text-align:center;height:90px">
                                <span>Purchase Order</span>
                                <br/>
                                <span style="color:#22518a" t-field="doc.name"/>
                            </th>
                        </tr>
                    </table>
                </div>
                <div style="float:right">
                    <div class="bordered" style="float:right">
                        <strong>Supplier:</strong>
                        <div>
                            <div t-field="doc.partner_id.name"/>
                            <div t-field="doc.partner_id"
                                 t-options="{'widget':'contact','fields':['address']}"/>
                            VAT:

                            <span t-field="doc.partner_id.vat"/>
                        </div>
                    </div>
                    <div class="bordered" style="float:right;visibility:hidden"/>
                </div>
                <table class="date_table" style="margin-top:10px;float:right;">
                    <tr>
                        <th>Established by</th>
                        <t t-if="doc.partner_ref">
                            <th style="white-space:nowrap">Supplier Ref.</th>
                        </t>
                        <t t-if="doc.origin">
                            <th>Internal Reference</th>
                        </t>
                        <th>Date</th>
                    </tr>
                    <tr>
                        <td style="white-space:nowrap">
                            <span t-field="doc.user_id"/>
                            <br/>
                            <i>
                                <span t-field="doc.user_id.email"/>
                            </i>
                        </td>
                        <t t-if="doc.partner_ref">
                            <td style="white-space:nowrap">
                                <span t-field="doc.partner_ref"/>
                            </td>
                        </t>
                        <t t-if="doc.origin">
                            <td style="white-space:nowrap">
                                <span t-field="doc.origin"/>
                            </td>
                        </t>
                        <td>
                            <p t-field="doc.date_approve"
                               t-options="{&quot;widget&quot;: &quot;date&quot;}"/>
                        </td>
                    </tr>
                </table>
            </div>
            <div style="display: inline-block;margin:20px 0px;;">
                <t t-set="total_weight" t-value="0"/>
                <table class="main_table">
                    <tr style="color:#22518a">
                        <th>Description</th>
                        <th style="text-align:right;width:12%">Delivery</th>
                        <th style="text-align:right;width:12%" files="dn">Unit Price</th>
                        <th style="text-align:right;width:5%">Quantity</th>
                        <th style="text-align:right;width:10%" files="dn">Total</th>
                    </tr>
                    <t t-foreach="doc.order_line" t-as="line">
                        <tr>
                            <td>
                                <span t-field="line.name"/>
                            </td>
                            <t t-if="line.display_type != 'line_note'">
                                <td style="text-align:right">
                                    <span t-field="line.delivery_date"/>
                                </td>
                                <td style="text-align:right" files="dn">
                                    <span t-field="line.price_unit"/>
                                </td>
                                <td style="text-align:right">
                                    <span t-field="line.product_uom_qty"/>
                                </td>
                                <td style="text-align:right" files="dn">
                                    <span t-field="line.price_subtotal"/>
                                </td>
                            </t>
                        </tr>
                    </t>
                </table>
            </div>
            <div>
                <div style="float:left">
                    <table class="date_table" style="color:#22518a;width:200px">
                        <tr>
                            <td files="dn">
                                <b>Payment Conditions</b>
                                <br/>
                                <span t-field="doc.payment_term_id"/>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <b>Shipment</b>
                                <br/>
                                CPT Incoterms 2020


                            </td>
                        </tr>
                    </table>
                </div>
                <div style="float:right">
                    <table class="table_total">
                        <tr files="dn">
                            <th style="width:65%">Total excl VAT</th>
                            <td>
                                <span t-field="doc.amount_untaxed"/>
                            </td>
                        </tr>
                        <tr files="dn">
                            <th>VAT 20%</th>
                            <td>
                                <span t-field="doc.amount_tax"/>
                            </td>
                        </tr>
                        <tr files="dn">
                            <th>TOTAL VAT incl.</th>
                            <td>
                                <span t-field="doc.amount_total"/>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
        <t t-call="acc_main.footer_coolcomp_achat"/>
    </template>

